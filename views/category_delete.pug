extends layout 

block content 
    h1 #{title}: #{category.name}
    p= category.description 

    if items.length
        p #[strong Delete the following items before attempting to delete this category:] 
        .items-to-delete 
            h4 Items 
            dl
            each item in items 
                dt
                    a(href=item.url) #{item.name}
                dd  #{item.summary}

    else 
        p Do you really want to delete this category?

        form(method="POST" action="")
            .form-group 
                input#categoryid.form-control(type="hidden", name="categoryid", value=category._id required="true")
            button(type='submit') Delete