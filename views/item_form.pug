extends layout 

block content 
    h1= title 

    form(method="POST" action="")
        .form-group 
            label(for="name") Name:
            input#name.form-control(type="text" required="true" name="name" placeholder="Name" value=(undefined===item ? "" : item.name))
        .form-group 
            label(for="description") Description:
            input#description.form-control(type="text" required="true" name="description" placeholder="Description" value=(undefined===item ? "" : item.description))
        .form-group 
            label(for="category") Category:
            select#category.form-control(type="select" placeholder="Select category", name="category" required="true")
                - categories.sort()
                for category in categories 
                    if item
                        option(value=category._id selected= (category._id.toString()===item.category._id.toString() ? "selected" : false)) #{category.name}
                    else 
                        option(value=category._id) #{category.name}    
        .form-group 
            label(for="number_in_stock") Number in stock:
            input#number_in_stock.form-control(type="text" required="true" name="number_in_stock" placeholder="Quantity" value=(undefined===item ? "" : item.number_in_stock))
        .form-group 
            label(for="price") Price:
            input#price.form-control(type="text" required="true" name="price" placeholder="Price" value=(undefined===item ? "" : item.price))
        button(type="submit") Submit

    if errors
        ul 
            for error in errors 
                li!= error.msg