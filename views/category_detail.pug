extends layout 

block content 
    h1 Category: #{category.name}
    p= category.description 
    h4 Available Items for this category:
    dl
        each item in items 
            dt
                a(href=item.url) #{item.name}
            dd #{item.description}

        else
            p This category has no items.

    hr
    p
        a(href=category.url+"/update") Update
    p
        a(href=category.url+"/delete") Delete
